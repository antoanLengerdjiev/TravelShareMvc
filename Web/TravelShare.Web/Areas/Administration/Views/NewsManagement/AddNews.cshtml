@model TravelShare.Web.Areas.Administration.Models.NewsManagement.NewCreateViewModel

<div class="col-md-12">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-offset-4">
                <h2> Add new news-article</h2>
                @using (Html.BeginForm("AddNews", "NewsManagement", FormMethod.Post, new { @class = "form-default" }))
                {
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        
                        @Html.ValidationMessageFor(x => x.Title)
                        @Html.TextBoxFor(x => x.Title,new { @class = "form-control title-input", placeholder ="Title"})
                    </div>
                    <div class="form-group">
                      
                        @Html.ValidationMessageFor(x => x.Title)
                        @Html.TextAreaFor(x => x.Content, new { @class = "form-control content-input",placeholder = "Content" })
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary col-md-12" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }

@section jqueryui{
    @Styles.Render("~/Content/inputs")
}
